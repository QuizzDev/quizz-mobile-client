	<fx:Script>
		<![CDATA[
			import mx.logging.LogEventLevel;
			import mx.rpc.events.FaultEvent;
			
			private function genericFault(fe:FaultEvent ):void 
			{
				var message:String = fe.fault.faultDetail; 
				var code:String = fe.fault.faultCode;
				
				//Alert.show(message , code);
			}
		]]>
	</fx:Script>
	
	<swiz:beanProviders>
		<config:AppBeans />
		<config:BusinessBeans />
	</swiz:beanProviders>
	
	<swiz:config>
		<swiz:SwizConfig
			eventPackages="action.event"
			viewPackages="view, view.component, view.container, view.skin, view.skin.phone"
			defaultFaultHandler="{ genericFault }"
			/>
	</swiz:config>

